<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- стиль для заднего фона -->
    <style name="MyActionBar" parent="@style/Theme.AppCompat.DayNight.DarkActionBar">
        <item name="background">@drawable/gradient_blue</item>
        <item name="android:colorPrimary">#1A73E9</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:titleTextStyle">@style/MyTextAppearance</item>
    </style>
    <!-- стиль для текста -->
    <style name="MyTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="AppTheme" parent="Theme.AppCompat.DayNight">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>
</resources>